{
  "name": "neighborhood-library",
  "version": "1.0.0",
  "description": "A simple website hosting a neighborhood library for tools.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "dev": "ts-node-dev src/app.ts",
