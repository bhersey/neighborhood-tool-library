    "express": "^4.17.1",
    "mongoose": "^8.9.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "sass": "^1.84.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT"
}
